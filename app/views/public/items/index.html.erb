<h1>商品一覧</h1>

<% @items.each do |item| %>

<% if item.image.attached? %>
    <%= image_tag item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>

<p> 商品名 : <%= link_to item.name, item_path(item.id) %></p>

<p>税抜き価格 : <%= item.price %></p>
<% end %>