
<h1>商品一覧</h1>

<%= link_to "商品新規登録画面", new_admin_item_path %>

<% @items.each do |item| %>

 <p>画像</p>
  <% if item.image.attached? %>
    <%= image_tag item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>

<p>商品ID</p>
<p> 商品名 : <%= link_to item.name, admin_item_path(item.id) %></p>
<p>税抜き価格 : <%= item.price %></p>


<% end %>